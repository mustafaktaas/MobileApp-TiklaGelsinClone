                Text="Adres ekle ⊕" TextColor="White" TextTransform="None" FontAttributes="Bold"  >

            </Button>

        </StackLayout>

      

        <StackLayout BackgroundColor="#00aeef" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2">

            
              <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
        </StackLayout.GestureRecognizers>
            
            
            <Image Source="mavipng2" Margin="0,40,180,0" Scale="1">

